@model WebInmo.Models.Inquilino
@{
    ViewData["Title"] = "Eliminar inquilino";
}
<h1>@ViewData["Title"]</h1>
<p class="text-danger">¿Confirmás eliminar este inquilino?</p>

<div class="card mb-3">
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">DNI</dt>
      <dd class="col-sm-9">@Model.Dni</dd>
      <dt class="col-sm-3">Apellido</dt>
      <dd class="col-sm-9">@Model.Apellido</dd>
      <dt class="col-sm-3">Nombre</dt>
      <dd class="col-sm-9">@Model.Nombre</dd>
      <dt class="col-sm-3">Teléfono</dt>
      <dd class="col-sm-9">@Model.Telefono</dd>
      <dt class="col-sm-3">Email</dt>
      <dd class="col-sm-9">@Model.Email</dd>
    </dl>
  </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
